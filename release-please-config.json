{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-search-depth": 400,
  "group-pull-request-title-pattern": "chore${scope}: Release ${component} v${version}",
  "pull-request-title-pattern": "chore${scope}: Release ${component} v${version}",
  "packages": {
    ".": {
      "pull-request-title-pattern": "chore${scope}: Release v${version}",
      "tag-separator": "@",
      "include-v-in-tag": true,
      "changelog-path": "CHANGELOG.md",
      "release-type": "simple",
      "bump-minor-pre-major": false,
      "bump-patch-for-minor-pre-major": false,
      "draft": false,
      "prerelease": false,
      "exclude-paths": [".github"],
      "include-component-in-tag": false,
      "extra-files": [
        "standardized-workflows/all/workflows/codeowners.yml",
        "standardized-workflows/all/workflows/conventional-commits.yml",
        "standardized-workflows/all/workflows/stale.yml",
        "standardized-workflows/dotnet/workflows/lint.yml",
        "standardized-workflows/dotnet/workflows/release.yml",
        "standardized-workflows/dotnet/workflows/unit-tests.yml",
        "standardized-workflows/ssdt/workflows/lint.yml",
        "standardized-workflows/ssdt/workflows/release.yml",
        "standardized-workflows/ssdt/workflows/unit-tests.yml",
        "standardized-workflows/ssis/workflows/lint.yml",
        "standardized-workflows/ssis/workflows/release.yml",
        "standardized-workflows/ssis/workflows/unit-tests.yml",
        "standardized-workflows/terraform/workflows/lint.yml",
        "standardized-workflows/terraform/workflows/release.yml",
        "standardized-workflows/terraform/workflows/unit-tests.yml"
      ]
    }
  },
  "plugins": []
}
